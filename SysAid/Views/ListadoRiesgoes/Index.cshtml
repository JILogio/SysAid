        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListadoActivos.codigoActivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amenaza.origen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amenaza.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.riesgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vulnerabilidad.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Controles.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Controles.descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idListadoRiesgo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idListadoRiesgo })
            </td>
