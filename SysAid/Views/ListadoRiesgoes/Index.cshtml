@model IEnumerable<SysAid.ListadoRiesgo>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de riesgos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Codigo Activo
            @*@Html.DisplayNameFor(model => model.Amenaza.origen)*@
        </th>
        <th>
            Origen
            @*@Html.DisplayNameFor(model => model.Controles.nombre)*@
        </th>
        <th>
            Amenaza
            @*@Html.DisplayNameFor(model => model.ListadoActivos.nombreActivo)*@
        </th>
        <th>
            Riesgo
            @*@Html.DisplayNameFor(model => model.ListadoActivos.nombreActivo)*@
        </th>
        <th>
            Vulnerabilidad
            @*@Html.DisplayNameFor(model => model.ListadoActivos.nombreActivo)*@
        </th>
        <th>
            Control
